<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ダークテーマ用 テーマで使用するカラーの指定 -->
    <style name="Theme.TextCounter" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- ボタンの色--><!-- アプリの主なブランドカラー,デフォルトではアクションバーの背景。 -->
        <item name="colorPrimary">@color/buttonColor</item>
        <!-- テキスト選択時のカラー-->
        <item name="colorSecondary">@color/blue</item>

        <!-- 履歴タブの色-->
        <item name="android:colorPrimary">@color/ActionColor</item>
        <!-- 履歴タブのアプリ名  -->
        <item name="windowActionBar">true</item>
        <!-- ステータスバーカラー -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <!-- Activityの上のアプリ名タブ  -->
        <item name="windowNoTitle">false</item>
    </style>
</resources>